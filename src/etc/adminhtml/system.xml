<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="klikealo_carrier" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <tab>klikealo</tab>
            <label>Carriers</label>
             <resource>Klikealo_Carriers::carriers_config</resource>
            <group id="carriers" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Remitente</label>
                <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="name" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Name</label>
                </field>
                <field id="ruc" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Ruc</label>
                </field>
                <field id="phone" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Phone</label>
                </field>
                <field id="email" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="0">
                   <label>Email</label>
                </field>
                <field id="country" translate="label" type="multiselect" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Country</label>
                    <source_model>Magento\Directory\Model\Config\Source\Country</source_model>
                </field>
                <field id="address" translate="label" type="text" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="0">
                   <label>Address</label>
                </field>
                <field id="ubigeo" translate="label" type="text" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="0">
                   <label>Postcode / Ubigeo</label>
                </field>
                <field id="contact" translate="label" type="text" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="0">
                   <label>Contact Name</label>
                </field>
                <field id="comment" translate="label" type="text" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="0">
                   <label>Comentario</label>
                </field>
            </group>
        </section>
    </system>
</config>
